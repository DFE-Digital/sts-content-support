@using Dfe.ContentSupport.Web.Models.Mapped.Types
@model Dfe.ContentSupport.Web.Models.Mapped.Standard.EmbeddedAsset

<div class="column-full">
    @switch (Model.AssetContentType)
    {
        case AssetContentType.Image:
            <img src="@Model.Uri" alt="@Model.Description" title="@Model.Title"/>
            break;
        case AssetContentType.Video:
            <video controls>
                <source src="@Model.Uri" type="video/mp4">
                Your browser does not support the video tag.
            </video>
            break;
        case AssetContentType.Unknown:
        default:
            throw new ArgumentOutOfRangeException();
    }
</div>