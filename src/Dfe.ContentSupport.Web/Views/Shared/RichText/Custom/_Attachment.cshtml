@model ContentItemBase
    <section class="attachment govuk-!-margin-top-8">
        <div class="attachment-thumbnail">
            <a href="@Model.Data.Target.Asset.File.Url" download>
                @{
                    var fileExtension = Model.Data.Target.Asset.File.ContentType.Split('/').Last().ToLower();
                    switch (fileExtension)
                    {
                        case "pdf":
                            <partial name="Icons/_Pdf" />
                            break;
                        case "csv":
                        case "xls":
                        case "xlsx":
                            <partial name="Icons/_Spreadsheet" />
                            break;
                        case "html":
                        case "htm":
                            <partial name="Icons/_Html" />
                            break;
                        default:
                            <partial name="Icons/_Generic" />
                            break;
                        
                    }
                }
                
                
            </a>
        </div>

        <div class="attachment-details">
            <h2 class="attachment-title">
                <a href="@Model.Data.Target.Asset.File.Url" aria-describedby="file-details" class="govuk-link attachment-link" download>
                    @Model.Data.Target.Title
                </a>
            </h2>

            <p class="attachment-metadata">
                <span class="attachment-attribute" aria-label="file type">@Model.Data.Target.Asset.File.ContentType.Split('/').Last().ToUpper()</span>,
                <span class="attachment-attribute" aria-label="file size">
                    @(Model.Data.Target.Asset.File.Details.Size / 1024) KB
                </span>
            </p>
        </div>
    </section>